<Window x:Class="PL.Dependency.DependencyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Dependency"
        mc:Ignorable="d"
        DataContext="{Binding Depedencies, RelativeSource={RelativeSource Self}, Mode=TwoWay}"

        Title="DependencyWindow" Height="450" Width="800">

    <Grid>
        <Button Content="Add" HorizontalAlignment="Left" Margin="183,188,0,0" VerticalAlignment="Top" Height="80" Width="160" Background="Aqua" Click="AddDependency"/>
        <Button Content="Delete" HorizontalAlignment="Right" Margin="0,188,119,0" VerticalAlignment="Top" Height="80" Width="160" Background="Aqua" Click="DeleteDependency"/>
        <Label Content="Dependencies window" 
HorizontalAlignment="Center" 
VerticalAlignment="Top" 
Margin="0,10,10,0" 
FontFamily="Comic Sans MS" 
FontSize="36" 
FontStyle="Italic" 
FontWeight="Bold" 
Foreground="Turquoise" 
Padding="10,5"/>
    </Grid>
</Window>