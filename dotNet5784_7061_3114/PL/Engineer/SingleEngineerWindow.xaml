<Window x:Class="PL.Engineer.SingleEngineerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d"
        Title="SingleEngineerWindow" Height="400" Width="300">
    <Grid Margin="10,54,0,0">

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <!-- StackPanel for the label, the field of class -->
            <StackPanel>
                <Label Content="ID:"/>
                <Label Content="Name:"/>
                <Label Content="Email: "/>
                <Label Content="Level"/>
                <Label Content="Cost"/>
                <Label Content="Can To Remove: " />
                <Label Content="Active: " />
            </StackPanel>
            <StackPanel>
                <TextBox  Margin="3" Width="100"/>
                <TextBox  Margin="3" Width="100"/>
                <TextBox  Margin="4" Width="100"/>
                <ComboBox Margin="4" Width="100"/>
                <TextBox  Margin="4" Width="100"/>
                <CheckBox Margin="6" Width="100" IsChecked="True"/>
                <CheckBox Margin="5" Width="100" IsChecked="True"/>
            </StackPanel>
        </StackPanel>

        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="50" Width="50" Margin="110,0,0,10"  />
    </Grid>
</Window>
