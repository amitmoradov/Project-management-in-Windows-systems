<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
       
        Style="{StaticResource {x:Type Window}}"
    
        Title="MainWindow" Height="450" Width="800">
    <!-- Style (line 12) for background -->
    <Grid>

        <Button Content="Handle Engineer" HorizontalAlignment="Left" Margin="400,0,0,0" VerticalAlignment="Center" Height="80" Width="160" Background="Aqua" Click="btnEngineers_Click"/>
        <Button Content="Data Initialization" HorizontalAlignment="Left" Margin="200,0,0,0" VerticalAlignment="Center" Click="Data_Initialization" Height="80" Width=" 160" Background="BurlyWood"/>
        <Button Content="Reset DataBase" HorizontalAlignment="Left" Margin="600,0,0,0" VerticalAlignment="Center" Click="ResetDataBase" Height="80" Width=" 160" Background="DarkGray"/>
        <Label Content="בעזרת השם נעשה ונצליח" 
       HorizontalAlignment="Right" 
       VerticalAlignment="Top" 
       Margin="0,10,10,0" 
       FontFamily="Comic Sans MS" 
       FontSize="36" 
       FontStyle="Italic" 
       FontWeight="Bold" 
       Foreground="DeepSkyBlue" 
       Padding="10,5"/>


    </Grid>
</Window>
