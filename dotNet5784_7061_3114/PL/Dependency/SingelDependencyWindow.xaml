<Window x:Class="PL.Dependency.SingelDependencyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Dependency"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}, Mode=TwoWay}"
        Title="SingelDependencyWindow" Height="450" Width="800">
        
    
    <Grid>
        <Label Content="Dependency details" 
HorizontalAlignment="Center" 
VerticalAlignment="Top" 
Margin="0,10,10,0" 
FontFamily="Comic Sans MS" 
FontSize="36" 
FontStyle="Italic" 
FontWeight="Bold" 
Foreground="SlateBlue" 
Padding="10,5"/>
        <ComboBox Grid.Column="0" SelectedItem="{Binding Path=dependentTask, Mode=TwoWay}"/>
        <ItemsSource="{Binding Source={StaticResource allIds}}" SelectionChanged="ComboBox_SelectionChanged"/>
        <ComboBox Grid.Column="1" SelectedValue="{Binding Path=dependensOnTask, Mode=TwoWay}"
         ItemsSource="{Binding Source={StaticResource allIds}}" SelectionChanged="ComboBox_SelectionChanged"/>


    </Grid>


</Window>