<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"

    Title="MainWindow" Height="450" Width="1000">
    <Window.Resources>
        <BitmapImage x:Key="MyImage" UriSource="\Image\smartroad_desk.jpg"/>
    </Window.Resources>

    <Grid>
        <Image Source="{StaticResource MyImage}"/>
        <Button Content="Data Initialization" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Click="Data_Initialization" Height="33" Width="220" Background="BurlyWood"/>
        <Button Content="Reset DataBase" HorizontalAlignment="Center" Margin="0,184,0,0" VerticalAlignment="Top" Click="ResetDataBase" Height="33" Width="220" Background="DarkGray"/>
        <Button Content="ADMIN" HorizontalAlignment="Left" Margin="380,222,0,0" VerticalAlignment="Top" Height="33" Width="110" Click="AdminButton" Background="LemonChiffon"/>
        <Label Content=" Smart roads project - בעזרת השם נעשה ונצליח" 
       HorizontalAlignment="Right" 
       VerticalAlignment="Top" 
       Margin="0,10,10,0" 
       FontFamily="Comic Sans MS" 
       FontSize="36" 
       FontStyle="Italic" 
       FontWeight="Bold" 
       Foreground="DeepSkyBlue" 
       Padding="10,5"/>
        <Button Content="Engineer" HorizontalAlignment="Left" Margin="490,222,0,0" VerticalAlignment="Top" Width="111" Height="33" Click="InsertEngineer"/>


    </Grid>
</Window>
