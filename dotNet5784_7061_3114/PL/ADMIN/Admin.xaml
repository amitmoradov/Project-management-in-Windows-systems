<Window x:Class="PL.ADMIN.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.ADMIN"
        mc:Ignorable="d"
        Title="Admin" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1B4D5B" Offset="0" />
                <GradientStop Color="#2D768E" Offset="0.5" />
                <GradientStop Color="#7F9D9E" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Handle Engineer" HorizontalAlignment="Left" Margin="166,0,0,0" VerticalAlignment="Center" Height="80" Width="160" Background="Aqua" Click="btnEngineers_Click"/>
        <Button Content="Handle Task" HorizontalAlignment="Left" Margin="449,0,0,0" VerticalAlignment="Center" Height="80" Width="160" Background="Aqua" Click="btnTasks_Click"/>

        <Label Content="Admin window" 
       HorizontalAlignment="Right" 
       VerticalAlignment="Top" 
       Margin="0,10,10,0" 
       FontFamily="Comic Sans MS" 
       FontSize="36" 
       FontStyle="Italic" 
       FontWeight="Bold" 
       Foreground="Red" 
       Padding="10,5"/>
    </Grid>
</Window>
